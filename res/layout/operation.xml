<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_hight"
            android:orientation="horizontal" >

            <TextView
                style="@style/default_tv_80"
                android:text="开始时间：" />

            <RelativeLayout style="@style/default_relative_bj" >

                <Button
                    android:id="@+id/operation_star_time_btn"
                    style="@style/arrow_down_btn" />

                <TextView
                    android:id="@+id/operation_star_time_et"
                    style="@style/default_et"
                    android:layout_toLeftOf="@+id/operation_star_time_btn" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_hight"
            android:orientation="horizontal" >

            <TextView
                style="@style/default_tv_80"
                android:text="结束时间：" />

            <RelativeLayout style="@style/default_relative_bj" >

                <Button
                    android:id="@+id/operation_end_time_btn"
                    style="@style/arrow_down_btn" />

                <TextView
                    android:id="@+id/operation_end_time_et"
                    style="@style/default_et"
                    android:layout_toLeftOf="@+id/operation_end_time_btn" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_hight"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                style="@style/default_tv_80"
                android:text="用户编号：" />

            <EditText
                android:id="@+id/operation_user_num_et"
                style="@style/default_tv_bj" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_hight"
            android:orientation="horizontal" >

            <TextView
                style="@style/default_tv_80"
                android:text="操作类型：" />

            <RelativeLayout style="@style/default_relative_bj" >

                <Button
                    android:id="@+id/operation_type_btn"
                    style="@style/arrow_down_btn" />

                <TextView
                    android:id="@+id/operation_type_et"
                    style="@style/default_et"
                    android:layout_toLeftOf="@+id/operation_type_btn" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_hight"
            android:orientation="horizontal" >

            <TextView
                style="@style/default_tv_80"
                android:text="内容摘要：" />

            <EditText
                android:id="@+id/operation_desp_et"
                style="@style/default_tv_bj" />
        </LinearLayout>

        <Button
            android:id="@+id/operation_query_btn"
            style="@style/red_btn"
            android:text="查询" />
    </LinearLayout>

</LinearLayout>