<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_press" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_hight"
        android:orientation="horizontal" >

        <TextView
            style="@style/default_tv_80"
            android:paddingLeft="5dp"
            android:text="事物代码" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_press" />

        <TextView
            android:id="@+id/thing_code_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_press" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_hight"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_hight"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/proof_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="凭证日期：" />

            <TextView
                android:id="@+id/proof_date_et"
                style="@style/default_et"
                android:inputType="date" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_press" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_hight"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/account_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="记账日期：" />

            <TextView
                android:id="@+id/account_date_et"
                style="@style/default_et"
                android:inputType="date" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_press" />

</LinearLayout>