<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/taketime_bj"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@drawable/tacktime_title_bj"
        android:drawableLeft="@drawable/oclok"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="请选择时间"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp" >

        <DatePicker
            android:id="@+id/datepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/tacktime_title_bj"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/taketime_set"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/taketime_btn_e"
            android:text="@string/confirm_str"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/taketime_cancel"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/taketime_btn_e"
            android:text="@string/cancel_str"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>