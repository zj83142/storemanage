<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/good_item_bj"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/card13_item_material"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="物料号："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/card13_item_facotry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="工厂："
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/card13_item_store"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="库位："
            android:textColor="@color/black" />
        
        <TextView
            android:id="@+id/card13_item_desp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="物料描述"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/card13_item_cw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>