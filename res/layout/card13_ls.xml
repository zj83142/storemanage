<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/default_hight"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/card13_ls_factory"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:paddingTop="8dp"
            android:layout_weight="1"
            android:background="@color/gray_dark"
            android:drawableBottom="@drawable/arraw_img"
            android:gravity="center"
            android:maxLength="4"
            android:text="工厂"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/card13_ls_store"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:paddingTop="8dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/gray_dark"
            android:drawableBottom="@drawable/arraw_img"
            android:gravity="center"
            android:maxLength="4"
            android:text="库位"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/card13_ls_print"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:paddingTop="8dp"
            android:layout_weight="1"
            android:background="@color/gray_dark"
            android:drawableBottom="@drawable/arraw_img"
            android:gravity="center"
            android:text="未打印"
            android:textColor="@color/black" />
    </LinearLayout>

    <ListView
        android:id="@+id/card13_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/gray_line"
        android:fadingEdge="none"
        android:scrollbars="none" />

</LinearLayout>